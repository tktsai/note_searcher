{
	"name": "note-searcher",
	"displayName": "note-searcher",
	"description": "searches notes",
	"version": "0.0.11",
	"publisher": "uozuaho",
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/uozuAho/note_searcher"
	},
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"zettelkasten",
		"markdown",
		"search"
	],
	"activationEvents": [
		"onCommand:noteSearcher.search",
		"onCommand:noteSearcher.enableCurrentDir",
		"onCommand:noteSearcher.createNote",
		"onView:noteSearcher-results"
	],
	"main": "./dist/noteSearcher.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "noteSearcher",
					"title": "Note Searcher",
					"icon": "img/spiral.png"
				}
			]
		},
		"views": {
			"noteSearcher": [
				{
					"id": "noteSearcher-results",
					"name": "Search results"
				},
				{
					"id": "noteSearcher-related",
					"name": "Related files"
				}
			]
		},
		"commands": [
			{
				"command": "noteSearcher.search",
				"title": "Note searcher: search for docs"
			},
			{
				"command": "noteSearcher.enableCurrentDir",
				"title": "Note searcher: enable in this directory"
			},
			{
				"command": "noteSearcher.disableCurrentDir",
				"title": "Note searcher: disable in this directory"
			},
			{
				"command": "noteSearcher.createNote",
				"title": "Note searcher: create a new note"
			},
			{
				"command": "noteSearcher.searchResults.copyRelativePath",
				"title": "Copy relative path"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "noteSearcher.searchResults.copyRelativePath",
					"when": "view == noteSearcher-results"
				}
			]
		},
		"keybindings": [
			{
				"command": "noteSearcher.search",
				"key": "ctrl+alt+s"
			},
			{
				"command": "noteSearcher.createNote",
				"key": "ctrl+alt+n"
			}
		],
		"configuration": {
			"title": "Note Searcher",
			"properties": {
				"noteSearcher.search.useLucene": {
					"description": "Use lucene for full text search (requires Java)",
					"type": "boolean",
					"default": false
				},
				"noteSearcher.deadLinks.showOnSave": {
					"description": "Search all files for dead links, and display any in a new editor",
					"type": "boolean",
					"default": false
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"lint": "eslint src --ext ts",
		"pretest": "npm run lint",
		"test": "jest",
		"test:watch": "jest --watch",
		"e2e": "npm run e2e:compile && extest run-tests e2e-out/*.js",
		"e2e:setup": "extest setup-tests e2e-out/*.js",
		"e2e:compile": "rm -rf e2e-out && tsc -p tsconfig.e2e.json"
	},
	"devDependencies": {
		"@types/chai": "^4.2.11",
		"@types/glob": "^7.1.1",
		"@types/jest": "^25.1.4",
		"@types/lunr": "^2.3.3",
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"chai": "^4.2.0",
		"clipboardy": "^2.3.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"jest": "^25.2.3",
		"lunr": "^2.3.8",
		"mocha": "^7.1.1",
		"retext": "^7.0.1",
		"retext-keywords": "^6.0.0",
		"retext-pos": "^3.0.0",
		"ts-jest": "^25.2.1",
		"ts-loader": "^6.2.2",
		"typemoq": "^2.1.0",
		"typescript": "^3.7.5",
		"vscode-extension-tester": "^2.6.0",
		"vscode-test": "^1.3.0",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11"
	}
}
